# Database Configuration
MB_POSTGRES_HOST=localhost
MB_POSTGRES_PORT=5432
MB_POSTGRES_DB=mediabase
MB_POSTGRES_USER=postgres
MB_POSTGRES_PASSWORD=postgres

# API Configuration
MB_API_HOST=0.0.0.0
MB_API_PORT=8000
MB_API_DEBUG=true

# Logging
MB_LOG_LEVEL=INFO

# Data Sources
MB_GENCODE_GTF_URL=https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_human/release_47/gencode.v47.basic.annotation.gtf.gz
